#!/usr/bin/env python
import curses

def app(stdscr):
  begin_x = 20 ; begin_y = 7
  height = 5 ; width = 40
  win = curses.newwin(height, width, begin_y, begin_x)
  while 1:
    c = stdscr.getch()
    if c == ord('q'): break
  pass

def main():
  curses.wrapper(app)

if __name__ == '__main__':
  main()
